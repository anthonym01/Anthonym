{
  "name": "anthonym",
  "version": "1.0.0",
  "description": "An electron based Music player",
  "main": "main.js",
  "category": "Multimedia",
  "author": {
    "name": "Anthonym",
    "email": "samuelmatheson20@gmail.com"
  },
  "homepage": "https://github.com/anthonym01/Anthonym",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonym01/Anthonym"
  },
  "keywords": [
    "Electron",
    "Audio",
    "Player"
  ],
  "icon": "build/icons/icon.png",
  "license": "ISC",
  "bin": "AA01",
  "scripts": {
    "start": "electron main.js",
    "postinstall": "electron-builder install-app-deps",
    "builder-default": "electron-builder",
    "builder-linux": "electron-builder --linux deb appimage tar.xz snap pacman",
    "builder-win": "electron-builder --win --x64 --ia32"
  },
  "build": {
    "appId": "com.anthonym.music",
    "icon": "build/icons/icon.png",
    "productName": "anthonym",
    "copyright": "none",
    "buildVersion": "1.0.0",
    "remoteBuild": "true",
    "asar": "true",
    "mac": {
      "category": "music",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.png"
    },
    "linux": {                                         
      "icon": "build/icons/icon.png",
      "category": "Multimedia"
    },
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "Windows/**/*",
      "node_modules/**/*",
      "build/**/*",
      "package.json",
      "main.js"
    ]
  },
  "devDependencies": {
    "asar": "^1.0.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-store": "^6.0.1",
    "electron-window-state": "^5.0.3",
    "howler": "^2.2.1",
    "music-metadata": "^7.6.2",
    "wallpaper": "^4.4.1"
  }
}